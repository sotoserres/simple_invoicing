.page-header
  %h1
    Αποθήκη
    %div
      = link_to new_item_path, class: 'btn btn-success' do
        .fa.fa-plus
        Προσθήκη Προϊόντος
%table.table.table-bordered
  %thead
    %tr
      %th A/A
      %th Κατηγορία
      %th Υποκατηγορία
      %th Ονομασία
      %th Απόθεμα
      %th Κωδικός
      %th Barcode
      %th Τιμή
      %th Προμηθευτής
      %th{ colspan: '3' } Ενέργειες

  %tbody
    - @items.each_with_index do |item, index|
      %tr
        %td
          =index+1
        %td= item.category
        %td= item.subcategory
        %td= link_to item.name, item, style: 'font-weight:bold'
        %td= item.stock
        %td= item.code
        %td= item.barcode
        %td= item.price
        %td
          - if item.supplier_id
            = link_to item.supplier.surname, customer_path(item.supplier)
          - else
            = '--'

        %td
          = link_to item, class: 'btn btn-primary' do
            .fa.fa-info-circle
        %td
          = link_to edit_item_path(item), class: 'btn btn-warning' do
            .fa.fa-edit
        %td
          = link_to items_path(@item), method: :delete, remote: true, data: { confirm: 'Είστε σίγουρος;' }, class: 'btn btn-danger' do
            .fa.fa-trash
%br
