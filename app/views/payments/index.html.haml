.page-header
  %h1
    Πληρωμές
    %div
      = link_to new_payment_path, class: 'btn btn-success' do
        .fa.fa-plus
        Προσθήκη Πληρωμής
%table.table.table-bordered
  %thead
    %tr
      %th A/A
      %th Κωδικός Πληρωμής
      %th Συναλλασόμενος
      %th Ημερομηνία
      %th Ποσό
      %th Περιγραφή
      %th{ colspan: '3' } Ενέργειες

  %tbody
    - @payments.each_with_index do |payment, index|
      %tr
        %td
          =index+1
        %td= payment.id
        %td
          - if payment.user_id
            = link_to payment.user_id.surname, customer_path(payment.user_id)
          - else
            = '--'
        -# %td= link_to invoice.code, invoice, style: 'font-weight:bold'
        %td= payment.date
        %td= payment.ammount
        %td= payment.description
        %td
          = link_to payment, class: 'btn btn-primary' do
            .fa.fa-info-circle
        %td
          = link_to edit_payment_path(payment), class: 'btn btn-warning' do
            .fa.fa-edit
        %td
          = link_to payment_path(@payment), method: :delete, remote: true, data: { confirm: 'Είστε σίγουρος;' }, class: 'btn btn-danger' do
            .fa.fa-trash
%br
