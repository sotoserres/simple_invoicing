- if current_user
  %li.dropdown
    %a.dropdown-toggle{ style: 'font-weight: bold', "data-toggle" => "dropdown", :href => "#", id: "current-user-detail"  }
      #{current_user.email}
      %span.caret
    %ul.dropdown-menu
      %li
        = link_to edit_user_registration_path do
          .fa.fa-user
          My Account
      %li
        = link_to destroy_user_session_path, method: :delete do
          .fa.fa-user-times
          Log out
      - if current_user.is_admin
        %li.divider
          = link_to admin_users_path do
            .fa.fa-dashboard
            Admin Panel
- else
  %li
    = link_to new_registration_path('user'), class: " #{ 'highlight' if params[:controller] == 'registrations' }" do
      .fa.fa-user-plus
      Sign Up

  %li
    = link_to new_user_session_path, class: " #{ 'highlight' if params[:controller] == 'sessions' }" do
      %span.fa.fa-user
      Log In
